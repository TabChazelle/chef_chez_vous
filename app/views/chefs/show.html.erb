<div class="profile-container-chef">
  <div class="profile-content">
    <h1><%= @chef.name %></h1>
    <%= cl_image_tag(@chef.photo, height: 300, width: 400, crop: :fill) unless @chef.photo.nil? %>
    <p><strong>Chef's Specialty:</strong> <%= @chef.specialty %></p>
    <p><strong>Biography:</strong> <%= @chef.description %></p>

    <div class="reviews">
      <h2>Check out their reviews!</h2>
      <% @chef.reviews.each do |review| %>
        <p><strong><%= review.user.name %>:</strong> <%= review.content %></p>
      <% end %>
    </div>
  </div>

  <div class="booking-form-share">
    <%= render 'shared/booking_form', booking: @booking, chef_name: @chef.name %>
  </div>
</div>
