<div class="container">
<h1>My Bookings</h1>
<div class="container mt-5">
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body text-center">
            <div class=“text-center”>
              <img class="rounded-circle mx-auto" src="<%= booking.photo %>" alt="Chef's picture" style="width: 150px; height: 150px; object-fit: cover;">
            </div>
            <h5 class="card-title text-center mt-3">Your booking with: <br> Chef <%= booking.chef.name %></h5>
            <div class="card-text">
              <p><strong>Start:</strong> <%= booking.start_date.strftime("%B %d, %Y") %></p>
              <p><strong>End:</strong> <%= booking.end_date.strftime("%B %d, %Y") %></p>
            </div>
            <%= link_to 'View Details', booking_path(booking), class: 'button' %>
            <%= link_to booking_path(booking), data: { turbo_method: :delete, turbo_confirm: 'This will cancel your booking with your chef, are you sure?' }, class: 'delete-button' do %>
            <i class="fas fa-trash"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
