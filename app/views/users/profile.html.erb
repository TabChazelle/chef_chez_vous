
<%= link_to "⚙️", edit_user_path(@user), class: "button edit-profile-button" %> <!-- don't move it!! -->
<div class="profile-container">
<div class="profile-header">
<h1>User Profile</h1>

</div>


<div id="profile">
  <p>Name: <span id="name" contenteditable="true"><%= @user.name %></span></p>
  <p>Email: <span id="email" contenteditable="true"><%= @user.email %></span></p>

  <!-- Add more profile information here -->
  <div>
    <h2></h2>
    <%= image_tag("remi.jpg", alt: "remi", class: "profile-pic-one") %>
  </div>
  <div class="biography">
    <h2>Biography</h2>
    <p id="biography" contenteditable="true"><%= @user.biography %></p>
  </div>


<div class="profile-actions">

<% if @user.chef? %>
  <div>
    <h2>My Special Chef Details</h2>
    <p><strong>Specialty:</strong> <%= @user.specialty %></p>
  </div>
<% end %>
</div>
</div>

  <%= form_with(model: @user, url: toggle_chef_user_path(@user), method: :patch, local: true) do |form| %>
    <% if @user.chef? %>
      <%= form.submit "Remove Chef Status", class: "btn btn-danger" %>
    <% else %>
      <%= form.submit "Become a Chef", class: "button" %>
    <% end %>
  <% end %>
</div>
