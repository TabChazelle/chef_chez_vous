<div class="booking-form">
<div class="container py-5">
  <div class="row"><div class=booking-form-share>
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Booking for Chef: <%= chef_name %></h3>
          <%= simple_form_for @booking do |f| %>
            <%= f.input :start_date, as: :string, input_html: { data: { controller: "flatpickr" }, class: "datepicker", placeholder: "Start Date" } %>
            <%= f.input :end_date, as: :string, input_html: { data: { controller: "flatpickr" }, class: "datepicker", placeholder: "End Date" } %>
            <%= f.input :chef_id, as: :hidden, input_html: { value: @booking.chef_id } %>
            <%= f.input :number_of_guests, as: :integer, min: 1, required: true, input_html: { class: 'form-control', placeholder: "Number of Guests" } %>
            <%= f.input :special_requests, as: :text, required: true, input_html: { class: 'form-control', placeholder: "Special Requests" } %>
            <%= f.input :address, as: :string, required: true, input_html: { class: 'form-control', placeholder: "Address" } %>
            <%= f.submit class: 'bookings-button' %>
          <% end %>
      </div>
    </div>
  </div>


  <%# link_to 'Show My Bookings', bookings_path(@booking), class: 'btn btn-flat' %>
  </div>
</div>

</div>
