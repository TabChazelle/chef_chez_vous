<div class="booking-form">
<div class="container py-5">
  <div class="row"><div class=booking-form-share>
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Booking for Chef: <%= chef_name %></h3>
          <%= simple_form_for @booking do |f| %>
            <%= f.input :start_date, as: :string, input_html: { data: { controller: "flatpickr" }, class: "datepicker" } %>
            <%= f.input :end_date, as: :string, input_html: { data: { controller: "flatpickr" }, class: "datepicker" } %>
            <%= f.input :chef_id, as: :hidden, input_html: { value: @booking.chef_id } %>
            <%= f.submit class: 'button' %> <%= link_to 'See My Bookings', bookings_path(@booking), class: 'button' %>
          <% end %>

        </div> <!-- i know it looks like it doesn't belong here but it will break the footer to remove it -->
      </div>
    </div>
  </div>
</div>
</div>
